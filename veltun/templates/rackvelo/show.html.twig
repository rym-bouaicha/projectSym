{% extends 'base.html.twig' %}

{% block title %}Rackvelo{% endblock %}

{% block body %}
    <h1>Rackvelo</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>RefRack</th>
                <td>{{ rackvelo.refRack }}</td>
            </tr>
            <tr>
                <th>Capacite</th>
                <td>{{ rackvelo.capacite }}</td>
            </tr>
            <tr>
                <th>Modele</th>
                <td>{{ rackvelo.modele }}</td>
            </tr>
            <tr>
                <th>Modele picture</th>
                <td>{% if      rackvelo.modele == 1 %} <img src="{{ asset('/img/type 1.jpg') }}">
                        {% elseif  rackvelo.modele == 2 %} <img src="{{ asset('/img/type 2.jpg') }}">
                        {% elseif  rackvelo.modele == 3 %} <img src="{{ asset('/img/type 3.jpg') }}">
                    {% endif  %}
                </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_rackvelo_index') }}">back to list</a>
     <br> <br>
    <a href="{{ path('app_rackvelo_edit', {'refRack': rackvelo.refRack}) }}">edit</a>

    {{ include('rackvelo/_delete_form.html.twig') }}
{% endblock %}
